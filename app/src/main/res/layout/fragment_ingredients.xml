<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/fragment_margin"
        android:layout_marginStart="@dimen/fragment_margin">


    <com.martiproduction.drinkownia.CustomViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKŁADNIKI"
        app:external_font="fonts/Titillium/Titillium-Bold.otf"
        android:textColor="@color/colorTitleTextDetails"
        android:textSize="@dimen/details_title_text"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/list_margin"
        android:layout_marginLeft="@dimen/list_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredients_list">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>